<h1>User Login</h1>

<%= form_tag(login_path) do %>
	<div class="form-group">

		<%= text_field_tag :username, nil, placeholder: 'Username' %>

	</div>

	<div class="form-group">


		<%= password_field_tag :password, nil, placeholder: 'Password' %>
	</div>

	<div class="form-group">
		<%= submit_tag('Login', class: 'btn btn-success, btn-lg')%>
	</div>
<% end %>
