<h1 class="page-header"> Sign up for Dope&Derp! </h1>

<%= form_for(@user, :url => signup_path) do |f| %>
	<%= f.label(:email)%>
	<%= f.text_field(:email)%>

	<%= f.label(:username)%>
	<%= f.text_field(:username)%>
	
	<%= f.label(:password)%>
	<%= f.password_field(:password)%>

	<%= f.label(:password_confirmation)%>
	<%= f.password_field(:password_confirmation)%>

	<%= f.submit('Sign up')%>
<% end %>