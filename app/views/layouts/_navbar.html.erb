
  <%=link_to 'Home', root_path, class: 'btn btn-primary' %>
  <%=link_to 'About', about_path, class: 'btn btn-primary' %>
  <% if user_signed_in? %>
    <%=link_to 'Dope or Derp?', pictures_path, class: 'btn btn-primary' %>
    <%=link_to 'My D/D Pics', '', class: 'btn btn-primary' %>
    <%=link_to 'Upload', new_picture_path, class: 'btn btn-primary' %>
  <% end %>


  <% if session[:user_id] %>
    <div class="pull-right">
      <%= link_to 'Logout', logout_path, method: :delete, class: 'btn btn-danger' %>
    </div
  <% else %>
    <div class="pull-right">
      <%= form_tag(login_path) do %>

        <%= text_field_tag :username, nil, placeholder: 'Username' %>
        <%= password_field_tag :password, nil, placeholder: 'Password' %>
        <%= submit_tag('Login') %>

      <% end %>
      <div class="pull-right">
        <br>
        <%= link_to 'Signup', signup_path, class: 'btn btn-success' %>
      </div>

  <% end %>
  </div>
