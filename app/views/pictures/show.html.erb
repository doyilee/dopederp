<h1 class = "page-header">Picture description</h1>
<div class="form-group">
  <div class="row">
    <div class="col-lg-5 col-sm-6 col-xs-6">
      <%= image_tag @picture.photo.url, :size => '400' %>
    </div>
    <div class="col-lg-4 col-sm-6 col-xs-6">
      <div class="row">
        <div class="col-xs-12">
          <h2><u>Description</u></h2>
        </div>
      </div>
      <div class="row">
        <div class="col-xs-12", style = 'height: 337px; overflow-wrap:break-word; overflow-y:scroll' >
          <%= @picture.description %><br>
          Total: <%= @picture.upvote - @picture.downvote %> <br>
          Upvotes: <%= @picture.upvote %><br>
          Downvotes: -<%= @picture.downvote %><br>
        </div>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-xs-1">

    </div>
    <div class="col-xs-1">

    </div>
    <div class="col-xs-1 pull-left">

      <%= form_for @picture, {url: picture_path} do |f| %>
        <%= f.hidden_field :upvote, :value => (@picture.upvote += 1) %>
        <%= f.button('', class: "btn btn-lg btn-success glyphicon glyphicon-thumbs-up") %>
      <% end %>
    </div>
    <div class="col-xs-1">

    </div>
      <%= form_for @picture, {url: picture_path} do |f| %>
        <%= f.hidden_field :downvote, :value => (@picture.downvote += 1) %>
        <%= f.button('', class: "btn btn-lg btn-danger glyphicon glyphicon-thumbs-down") %>
      <% end %>

    </div>

  </div>
</div>
