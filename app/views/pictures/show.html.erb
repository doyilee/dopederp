<h1 class = "page-header">Picture description</h1>
<div class="form-group">
  <div class="row">
    <div class="col-lg-5 col-sm-6 col-xs-6">
      <%= image_tag @picture.photo.url, :size => '400' %>
    </div>
    <div class="col-lg-4 col-sm-6 col-xs-6">
      <div class="row">
        <div class="col-xs-12">
          <h2><u>Description</u></h2>
        </div>
      </div>
      <div class="row">
        <div class="col-xs-12", style = 'height: 337px; overflow-wrap:break-word; overflow-y:scroll' >
          <%= @picture.description %>
        </div>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-xs-1">

    </div>
    <div class="col-xs-1">

    </div>
    <div class="col-xs-1">
      <button class="btn btn-lg btn-success glyphicon glyphicon-thumbs-up" type="submit"></button>
    </div>
    <div class="col-xs-1">
      <button class="btn btn-lg btn-danger glyphicon glyphicon-thumbs-down" type="submit"></button>
    </div>

  </div>
</div>
