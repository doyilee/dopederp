<h1 class = "page-header">"<%= @picture.title %>"</h1>
<div class="form-group">
  <div class="row">
    <div class="col-lg-5 col-sm-6 col-xs-6">
      <%= image_tag @picture.photo.url, :size => '400' %>
      <div class="row">
        <div class="col-xs-2 pull-left">
          <%= form_for @picture, {url: picture_path} do |f| %>
            <%= f.hidden_field :upvote, :value => (@picture.upvote += 1) %>
            <%= f.button(@picture.upvote, class: "btn btn-lg btn-success") %>
          <% end %>
        </div>
        <div class="col-xs-2">
        </div>
        <div class="col-xs-2">
        </div>
        <div class="col-xs-2">
        </div>
        <div class="col-xs-2">
          <%= form_for @picture, {url: picture_path} do |f| %>
            <%= f.hidden_field :downvote, :value => (@picture.downvote += 1) %>
            <%= f.button(@picture.downvote, class: "btn btn-lg btn-danger") %>
          <% end %>
        </div>


      </div>
    </div>
    <div class="col-lg-4 col-sm-6 col-xs-6">
      <div class="row">
        <div class="col-xs-12">
          <h2><u>Description</u><br>Total Score: <%= @picture.upvote - @picture.downvote %></h2>
        </div>
      </div>
      <div class="row">
        <div class="col-xs-12", style = 'height: 337px; overflow-wrap:break-word; overflow-y:scroll' >
          <%= @picture.description %><br>
        </div>
      </div>
    </div>
  </div>
  </div>
